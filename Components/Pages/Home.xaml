<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QanooniRishta.Components.Pages.Home"
             BackgroundColor="Transparent">

    <AbsoluteLayout>

        <!-- Full Background Grid -->
        <Grid AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">
            <!-- Background Image -->
            <Image Source="marriagebackground2.jpg"
                   Aspect="AspectFill"
                   Opacity="0.7"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill" />

            <!-- Foreground Buttons -->
            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="20">
                <Button Text="Search Relations"
                        Clicked="OnSearchRelationsClicked"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        HeightRequest="60"
                        FontSize="16"
                        CornerRadius="8"
                        ImageSource="serach2.png"
                        ContentLayout="Left, 10"/>

                <Button Text="Add New Relation"
                        Clicked="OnAddNewRelationClicked"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        HeightRequest="60"
                        FontSize="16"
                        CornerRadius="8"
                        ImageSource="addrealation.png"
                        ContentLayout="Left, 10"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Top-Left Logout Button -->
        <Button Text="Logout"
                Clicked="OnLogoutClicked"
                BackgroundColor="#D32F2F"
                TextColor="White"
                FontSize="14"
                FontAttributes="Bold"
                CornerRadius="5"
                Padding="10,5"
                AbsoluteLayout.LayoutBounds="0.02,0.02,120,40"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>
